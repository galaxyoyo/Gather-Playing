<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.galaxyoyo.gatherplaying.client.gui.DraftWindow">
    <fx:include source="DeckShower.fxml" HBox.hgrow="ALWAYS"/>
    <VBox HBox.hgrow="ALWAYS">
        <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="name_EN" text="Nom anglais"/>
                <TableColumn fx:id="name_FR" text="Nom traduit"/>
                <TableColumn fx:id="set" text="Édition"/>
                <TableColumn fx:id="manaCost" text="Coût de mana"/>
            </columns>
        </TableView>
        <Label fx:id="cardsCount" text="0 carte trouvée"/>
    </VBox>
    <fx:include source="CardDetailsShower.fxml" HBox.hgrow="ALWAYS"/>
</HBox>
