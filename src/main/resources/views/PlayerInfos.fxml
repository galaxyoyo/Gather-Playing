<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/null" fx:controller="fr.galaxyoyo.gatherplaying.client.gui.PlayerInfos" fx:id="parent">
    <Label fx:id="name" alignment="CENTER" style="-fx-background-color: lightgray;" textAlignment="CENTER"/>
    <GridPane>
        <Button fx:id="minus1Life" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-radius: 0px; -fx-font-size: 10px;" text="-1"
                textAlignment="CENTER" visible="false"/>
        <Button fx:id="minus5Life" maxWidth="1.7976931348623157E308" style="-fx-background-radius: 0px; -fx-font-size: 10px;" text="-5" visible="false" GridPane.rowIndex="1"/>
        <Label fx:id="life" alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 12pt; -fx-background-color: lightgray;" textAlignment="CENTER" visible="false"
               GridPane.columnIndex="1" GridPane.rowSpan="2"/>
        <Button fx:id="plus1Life" maxWidth="1.7976931348623157E308" style="-fx-background-radius: 0px; -fx-font-size: 10px;" text="+1" visible="false"
                GridPane.columnIndex="2"/>
        <Button fx:id="plus5Life" maxWidth="1.7976931348623157E308" style="-fx-background-radius: 0px; -fx-font-size: 10px;" text="+5" visible="false" GridPane.columnIndex="2"
                GridPane.rowIndex="1"/>
    </GridPane>
    <Label fx:id="library" contentDisplay="CENTER" alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="black">
        <graphic>
            <ImageView fitHeight="103.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true"/>
        </graphic>
    </Label>
    <ImageView fx:id="graveyard" fitHeight="103.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true"/>
    <ImageView fx:id="exile" fitHeight="103.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true"/>
</VBox>
